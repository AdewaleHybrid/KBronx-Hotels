      <!--- ------------------------------------------------------------ -->
      <!-- ShowStatus -->
             <!-- Status start -->
             <div class="container">
              <div class="row">
                  <div class="col-lg-12 positiontb">
                      <% if(msg.length) { %>
  
                      <h3 style="color: #aa8453;" class="text-center"><%=msg%></h3><br>
  
                      <%   } %>
                      <% if(err.length) { %>
  
                      <div class="errposition">
                          <h3 style="color: #aa8453;" class="text-center"><%=err%></h3>
                      </div>
  
  
                      <%   } %>
  
                      <% if(err.length == 0 ){ %>
  
                      <table class="table">
                          <thead class="thead-dark">
                              <tr border="1">
                                  <th style="color: #aa8453">Name</th>
                                  <th style="color: #aa8453">Date</th>
                                  <th style="color: #aa8453">Category</th>
                                  <th style="color: #aa8453">Type</th>
                                  <th style="color: #aa8453">Status</th>
                              </tr>
                          </thead>
                          <% for(i in data){  %>
  
                          <tbody>
                              <tr>
                                  <td><%=data[i].email%></td>
                                  <td><%=data[i].date%></td>
                                  <td><%=data[i].category%> </td>
                                  <td><%=data[i].type%></td>
                                  
                                  <% if(data[i].status == 1){ %>
                                      <td style="color: #17b978;" class="text-center">Approved</td>
                                  <% }  else if(data[i].status == 0){ %>
                                      <td style="color: #f0da16;" class="text-center">Pending
                                      <form action="/deletereq"  method="POST"> 
                                          <input type="text" name="mail" value="<%=data[i].email%>" hidden>
                                          <input type="text" name="want" value="<%=data[i].roomWant%>" hidden>
                                          <input type="text" name="cat" value="<%=data[i].category%>" hidden>
                                          <input type="text" name="type" value="<%=data[i].type%>" hidden>
                                          <input type="submit" value="Delete" style="background-color: #ff304f;" class="text-center btn btn-danger buttonDelete">
                                      </td>
                                      </form>
                                  <%  } %>
  
                              </tr>
                          </tbody>
                          <%   } %>
                      </table>
                      <%   } %>
                  </div>
              </div>
          </div>
          <!-- Status End -->
      <!-- Show status ends -->
